@model List<Votor.Areas.Portal.Models.Event>

@if (@Model.Count == 0)
{
    <p> @Localizer["No events"]</p>
}
else
{
    <table>
        <tr>
            <th>
                @Localizer["Event"]
            </th>
            <th>
                @Localizer["Actions"]
            </th>
        </tr>

        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Name

                </td>
                <td>
                    <a @*asp-controller="Event" asp-action="Details" *@
                        class="btn waves-effect waves-light purple darken-2 btn-small">
                        <i class="material-icons left">info_outline</i>@Localizer["Details"]
                    </a>
                    <a asp-controller="Event" asp-action="Edit" asp-route-id="@item.ID"
                       class="btn waves-effect waves-light purple darken-2 btn-small">
                        <i class="material-icons left">edit</i>@Localizer["Edit"]
                    </a>
                    <a asp-controller="Event" asp-action="DeleteWithPromt" asp-route-eventId="@item.ID"
                       class="btn waves-effect waves-light deep-orange accent-3 btn-small">
                        <i class="material-icons left">delete</i>@Localizer["Delete"]
                    </a></td>
            </tr>
        }
    </table>
}
