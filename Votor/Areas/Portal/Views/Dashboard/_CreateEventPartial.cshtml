@model Votor.Areas.Portal.Controllers.EventModel;

@using (Html.BeginForm("CreateEvent", "Dashboard", FormMethod.Post))
{
    <div class="input-field">
        <i class="material-icons prefix">event</i>

        @Html.LabelFor(model => model.EventName)
        @Html.TextBoxFor(model => model.EventName)
        @Html.ValidationMessageFor(model => model.EventName, "", new
        {
            @class = "red-text text-darken-1"
        })
    </div>

    <button type="submit" class="btn waves-effect waves-light @ViewBag.mainColor">@Localizer["Create"]</button>
}