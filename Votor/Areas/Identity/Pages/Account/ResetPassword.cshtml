@page
@using Microsoft.Extensions.Localization
@model ResetPasswordModel
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["Reset password"];
}

<div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3 offset-xl3">
        <form method="post">
            <div asp-validation-summary="All" class="red-text text-darken-1"></div>

            <input asp-for="Input.Code" type="hidden" />
            
            <h4>
                @Localizer["Reset password"];
            </h4>

            <div class="input-field">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" />
                <span asp-validation-for="Input.Email" class="red-text text-darken-1"></span>
            </div>
            <div class="input-field">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password"/>
                <span asp-validation-for="Input.Password" class="red-text text-darken-1"></span>
            </div>
            <div class="input-field">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword"/>
                <span asp-validation-for="Input.ConfirmPassword" class="red-text text-darken-1"></span>
            </div>
            <button type="submit" class="btn waves-effect waves-light @ViewBag.mainColor" style="width: 100%;">
                @Localizer["Reset"]
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
