@page
@using Microsoft.Extensions.Localization
@model ForgotPasswordConfirmation
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["Forgot password confirmation"];
}

<div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3 offset-xl3">
        <h4>
            @Localizer["Forgot password confirmation"]
        </h4>
        @Localizer["A link to reset your password has been sent. Please check your inbox."]
    </div>
</div>

