@page
@using Microsoft.Extensions.Localization
@model ResetPasswordConfirmationModel
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["Reset password confirmation"];
}

<div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3 offset-xl3">
        <h4>
            @Localizer["Reset password confirmation"]
        </h4>
        @Localizer["Your password has been reset."]
    </div>
    <div class="col s12 m8 l6 offset-m2 offset-l3 offset-xl3">
        <a asp-page="./Login" class="btn waves-effect waves-light purple darken-2" style="width: 100%;">
            @Localizer["Click here to log in"]
        </a>
    </div>
</div>
