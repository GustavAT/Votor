@page
@using Microsoft.Extensions.Localization
@model ForgotPasswordModel
@inject IStringLocalizer<SharedResources> Localizer;
@{
    ViewData["Title"] = Localizer["Password recovery"];
}

<div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3 offset-xl3">
        
        <h4>
            @ViewData["Title"]
        </h4>

        <form method="post">

            <div asp-validation-summary="All" class="red-text text-darken-1"></div>

            <div class="input-field">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email"/>
                <span asp-validation-for="Input.Email" class="red-text text-darken-1"></span>
            </div>
            <button type="submit" class="btn waves-effect waves-light @ViewBag.mainColor" style="width: 100%;">
                @Localizer["Submit"]
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
