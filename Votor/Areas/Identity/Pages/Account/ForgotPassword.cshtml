@page
@using Microsoft.Extensions.Localization
@model ForgotPasswordModel
@inject IStringLocalizer<SharedResources> Localizer;
@{
	ViewData["Title"] = Localizer["Password recovery"];
}
<form method="post">
	<div class="row">
		<div class="col s12 m8 l6 offset-m2 offset-l3">
			<div class="card @ViewBag.cardColor">
				<div class="card-content @ViewBag.cardTextColor">
					<span class="card-title card-title-weight-600">
						@ViewData["Title"]
					</span>
					<div asp-validation-summary="All" class="red-text text-darken-1"></div>

					<div class="input-field">
						<label asp-for="Input.Email"></label>
						<input asp-for="Input.Email" />
						<span asp-validation-for="Input.Email" class="red-text text-darken-1"></span>
					</div>
				</div>
				<div class="card-action card-action-overflow">
					<button type="submit" class="btn waves-effect waves-light right @ViewBag.mainColor">
						@Localizer["Submit"]
					</button>
				</div>
			</div>
		</div>
	</div>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
