@page
@using Microsoft.Extensions.Localization
@model ForgotPasswordModel
@inject IStringLocalizer<SharedResources> Localizer;
@{
    ViewData["Title"] = Localizer["Password recovery"];
}

<div class="row">
	<div class="col s12 m8 l8 offset-m2 offset-l2">
		<div class="card @ViewBag.cardColor">
			<div class="card-content @ViewBag.cardTextColor">
				<span class="card-title">
					@ViewData["Title"]
				</span>
				<form method="post">

					<div asp-validation-summary="All" class="red-text text-darken-1"></div>

					<div class="input-field">
						<label asp-for="Input.Email"></label>
						<input asp-for="Input.Email" />
						<span asp-validation-for="Input.Email" class="red-text text-darken-1"></span>
					</div>

				</form>

				<div class="card-internal-action card-action-overflow">
					<button type="submit" class="btn waves-effect waves-light right @ViewBag.mainColor">
						@Localizer["Submit"]
					</button>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
