@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Localization

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IStringLocalizer<SharedResources> Localizer;

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a @*asp-area="Identity" asp-page="/Account/Manage/Index" *@ title="Events">Events</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account @*@UserManager.GetUserName(User)!*@</a>
    </li>
    <li>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="logoutForm"></form>
        <a href="#!" class="logoutButton">Logout</a>
    </li>
}
else
{
    <li><a asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a></li>
}